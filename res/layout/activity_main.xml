<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    
    <!-- Buttons -->

    <LinearLayout
        android:id="@+id/layout_linear_middle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/layout_linear_smallButtons"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            
	        <Spinner
	            android:id="@+id/spinner_rollCount"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:entries="@array/stringArray_rollCount"
	            android:spinnerStyle="@android:style/Widget.Spinner.DropDown"
	        />
            
            <Button
                android:id="@+id/button_d4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
	            android:layout_weight="1"
                android:text="@string/string_d4"
        		android:onClick="rollD4"
        		/>

            <Button
                android:id="@+id/button_d6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
	            android:layout_weight="1"
                android:text="@string/string_d6"
        		android:onClick="rollD6"
        		/>

            <Button
                android:id="@+id/button_d8"
                android:layout_width="match_parent"
                android:layout_height="0dp"
	            android:layout_weight="1"
                android:text="@string/string_d8"
        		android:onClick="rollD8"
        		/>

            <Button
                android:id="@+id/button_d10"
                android:layout_width="match_parent"
                android:layout_height="0dp"
	            android:layout_weight="1"
                android:text="@string/string_d10"
        		android:onClick="rollD10"
        		/>

            <Button
                android:id="@+id/button_d12"
                android:layout_width="match_parent"
                android:layout_height="0dp"
	            android:layout_weight="1"
                android:text="@string/string_d12"
        		android:onClick="rollD12"
        		/>

            <Button
                android:id="@+id/button_d100"
                android:layout_width="match_parent"
                android:layout_height="0dp"
	            android:layout_weight="1"
                android:text="@string/string_d100"
        		android:onClick="rollD100"
        		/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView_displayText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="100sp"
        />
        
    </LinearLayout>
	<Button
        android:id="@+id/button_d20"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
        android:text="@string/string_d20"
        android:onClick="rollD20"
	    />
    <!-- /Buttons -->
</LinearLayout>